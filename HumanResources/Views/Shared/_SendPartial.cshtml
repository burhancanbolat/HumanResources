@using HumanResources.Data;

@model RecourseViewModel
<form method="post">
    <div class="row">
        <div class="col-lg-6">
            <fieldset>
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" placeholder="İlan Kategorisi yazınız....">

            </fieldset>
        </div>
        <div class="col-lg-6">
            <fieldset>
                <label class="form-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email" placeholder="İlan Kategorisi yazınız....">

            </fieldset>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <fieldset>
                    <label class="form-label" asp-for="Number"></label>
                    <input class="form-control" asp-for="Number" placeholder="İlan Kategorisi yazınız....">

                </fieldset>
            </div>
            <div class="col-lg-12">
                <fieldset>
                    <button type="submit" id="form-submit" class="main-dark-button"><i class="fa fa-paper-plane"></i></button>
                </fieldset>
            </div>
        </div>
    </div>
</form>