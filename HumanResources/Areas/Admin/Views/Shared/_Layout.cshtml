    <link rel="shortcut icon" href="~/Admin/images/favicon.png" />
</head>
<body><img src="~/admin/images/logo.png" />
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo mr-5"  asp-controller="Dashboard" asp-action="Index"><img src="images/logo.png" class="mr-0" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini"  asp-controller="Dashboard" asp-action="Index"><img src="images/logo-mini.jpg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="icon-menu"></span>
                </button>
                <ul class="navbar-nav navbar-nav-center">
                    <li class="nav-item nav-search d-none d-lg-block">
                        <div class="input-group">
                            <div class="input-group-prepend hover-cursor" id="navbar-search-icon">
                                <span class="input-group-text" id="search">
                                    <i class="icon-search"></i>
                                </span>
                            </div>
                            <input type="text" class="form-control" id="navbar-search-input" placeholder="Search now" aria-label="search" aria-describedby="search">
                        </div>
                    </li>
                </ul>
               
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="icon-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_settings-panel.html -->
            <!-- partial -->
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav user-select-none">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                            <i class="ti-world menu-icon"></i>
                            <span class="menu-title">ANASAYFA</span>
                        </a>
                    </li>

                    

                    

                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#content" aria-expanded="false" aria-controls="content">
                            <i class="ti-write menu-icon"></i>
                            <span class="menu-title">İÇERİK</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="content">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" asp-controller="Advert" asp-action="Index"> İş İlanları</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-controller="Recourse" asp-action="Index"> Başvurular</a></li>
                                 <li class="nav-item"> <a class="nav-link" asp-controller="Category" asp-action="Index"> Kategoriler</a></li>
                            </ul>
                        </div>
                    </li>
                      <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#content" aria-expanded="false" aria-controls="content">
                            <i class="ti-write menu-icon"></i>
                            <span class="menu-title">AYARLAR</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="content">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" asp-controller="LogoSetting" asp-action="Index"> Admin-Web logo Ayarları</a></li>
                               
                            </ul>
                        </div>
                    </li>

                  

                   
                    

                   


                   
                    
                </ul>
            </nav>




            <!-- content -->
            @RenderBody()
            
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Admin/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Admin/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Admin/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Admin/vendors/datatables.net-bs5/dataTables.bootstrap4.js"></script>
    <script src="~/Admin/js/dataTables.select.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Admin/js/off-canvas.js"></script>
    <script src="~/Admin/js/hoverable-collapse.js"></script>
    <script src="~/Admin/js/template.js"></script>
    <script src="~/Admin/js/settings.js"></script>
    <script src="~/Admin/js/todolist.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/Admin/js/dashboard.js"></script>
    <script src="~/Admin/js/Chart.roundedBarCharts.js"></script>
    <!-- End custom js for this page-->
</body>

</html>

      @await RenderSectionAsync("Scripts", required: false)
      <script>
    @if (TempData["success"] is not null)
	    {
        <text>
        Swal.fire({
            toast: true,
            position: 'top',
            icon: 'success',
            title: '@TempData["success"]',
            showConfirmButton : false,
            timer : 5000
        })
        </text>
	    }

        @if (TempData["error"] is not null)
	    {
        <text>
        Swal.fire({
            toast: true,
            position: 'top',
            icon: 'error',
            title: '@TempData["error"]',
            showConfirmButton : false,
            timer : 5000
            })
        </text>
	    }
    </script>