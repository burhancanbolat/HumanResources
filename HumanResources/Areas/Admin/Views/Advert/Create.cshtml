@model Advert

@{
    ViewData["title"] = "İlan Ekleme";
}
<h2>
    @ViewData["title"]
</h2>
<div class="card">
    <div class="card-body">

        <form method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <label class="form-label" asp-for="Appellation"></label>
                <input class="form-control" asp-for="Appellation" placeholder="Şirket Ünvanı Yazınız...">
                <span asp-validation-for="Appellation"></span>
            </div>
          <div class="mb-3">
        <label class="form-label" asp-for="Salary"></label>
                <input class="form-control" asp-for="SalaryText">
                <span asp-validation-for="Salary"></span>
    </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Qualifications"></label>
                <textarea asp-for="Qualifications" class="form-control"></textarea>
                <span asp-validation-for="Qualifications"></span>
            </div>  <div class="mb-3">
                <label for="LogoFile" class="form-label" asp-for="Logo"></label>
                <input class="form-control" type="file" id="LogoFile" name="LogoFile">
               
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="CountryName"></label>
                <input class="form-control" asp-for="CountryName" placeholder="Ülke Adını Yazınız...">
                <span asp-validation-for="CountryName"></span>
            </div>
            <div class="mb-3">
                <label for="FlagFile" class="form-label" asp-for="Flag"></label>
                <input class="form-control" type="file" id="FlagFile" name="FlagFile">
                
            </div>
          <div class="mb-3">
                <label class="form-label" asp-for="CategoryId"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                </select>
                <span asp-validation-for="CategoryId"></span>
            </div>



            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>
            <a class="btn btn-link" asp-action="Index">İptal</a>

        </form>

    </div>




    @section Scripts {

        <partial name="_ValidationScriptsPartial" />




        
    }


