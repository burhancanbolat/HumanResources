@model Category
@{
    ViewData["title"] = "Kategori Güncelleme";
}
<div class="card">
    <div class="card-body">
        <h2>
            @ViewData["title"]
        </h2>


        <form method="post">


            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" placeholder="Şirket Ünvanı Yazınız...">
                <span asp-validation-for="Name"></span>
            </div>

            <hr />
            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>
            <a class="btn btn-primary" asp-action="Index">İptal</a>
        </form>
    </div>
</div>

<div>
</div>

  @section Scripts {


    <partial name="_ValidationScriptsPartial" />
  }

