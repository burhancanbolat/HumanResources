@model Category

@{
    ViewData["title"] = "Kategori Ekleme";
}
<h2>
    @ViewData["title"]
</h2>
<div class="card">
    <div class="card-body">

        <form method="post">

            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" placeholder="İlan Kategorisi yazınız....">
                <span asp-validation-for="Name"></span>
            </div>
           

            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>
            <a class="btn btn-link" asp-action="Index">İptal</a>

        </form>
        </div>
    </div>




    @section Scripts {

        <partial name="_ValidationScriptsPartial" />





    }


